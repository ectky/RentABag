@model CollectionViewModel

@{
    ViewData["Title"] = "Edit Collection";
}

<div class="container contact_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li>Administrator</li>
                    <li class="active"><a asp-area="Administrator" asp-controller="Collection" asp-action="Index"><i class="fa fa-angle-right" aria-hidden="true"></i>Collections</a></li>
                    <li class="active"><a asp-area="Administrator" asp-controller="Collection" asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-angle-right" aria-hidden="true"></i>Edit Collection</a></li>
                </ul>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <section>
                <form method="post" asp-area="Administrator" asp-controller="Collection" asp-action="Edit" asp-route-id="@Model.Id">
                    <h4>Edit a Collection</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate"></label>
                        <input asp-for="StartDate" class="form-control" type="date" ></input>
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate"></label>
                        <input asp-for="EndDate" type="date"  class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="red_button shop_now_button mr-3"><a asp-area="Administrator" asp-controller="Collection" asp-action="Index">Back to List</a></div>
                        <button type="submit" class="message_submit_btn trans_300">Edit</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>