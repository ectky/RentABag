@model CreateBagViewModel

@{
    ViewData["Title"] = "Create Bag";
    var categories = this.ViewData["Categories"] as IEnumerable<SelectListItem>;
    var designers = this.ViewData["Designers"] as IEnumerable<SelectListItem>;
    var shops = this.ViewData["Shops"] as IEnumerable<SelectListItem>;
    var collections = this.ViewData["Collections"] as IEnumerable<SelectListItem>;
}

<div class="container contact_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li>Administrator</li>
                    <li class="active"><a asp-area="Administrator" asp-controller="Bag" asp-action="Index"><i class="fa fa-angle-right" aria-hidden="true"></i>Bags</a></li>
                    <li class="active"><a asp-area="Administrator" asp-controller="Bag" asp-action="Create"><i class="fa fa-angle-right" aria-hidden="true"></i>Create Bag</a></li>
                </ul>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <section>
                <form method="post">
                    <h4>Create a Bag</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiscountPercent"></label>
                        <input asp-for="DiscountPercent" class="form-control" />
                        <span asp-validation-for="DiscountPercent" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image"></label>
                        <input asp-for="Image" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Category</label>
                        <select asp-for="CategoryId" asp-items="categories" class="custom-select form-control">
                            <option selected disabled>Category</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Designer</label>
                        <select asp-for="DesignerId" asp-items="designers" class="custom-select form-control">
                            <option selected disabled>Designer</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Collection</label>
                        <select asp-for="CollectionId" asp-items="collections" class="custom-select form-control">
                            <option selected disabled>Collection</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <div class="red_button shop_now_button mr-3"><a asp-area="Administrator" asp-controller="Bag" asp-action="Index" >Back to List</a></div>
                        <button type="submit" class="message_submit_btn trans_300">Create</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>