@model Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="container contact_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li>Administrator</li>
                    <li class="active"><a asp-area="" asp-controller="Category" asp-action="Index"><i class="fa fa-angle-right" aria-hidden="true"></i>Categories</a></li>
                    <li class="active"><a asp-area="" asp-controller="Category" asp-action="Details" asp-route-id="@Model.Id"><i class="fa fa-angle-right" aria-hidden="true"></i>Category Details</a></li>
                </ul>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <section>
                <h4>Category Details</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" disabled></textarea>
                </div>
                <div class="red_button shop_now_button mr-3"><a asp-area="" asp-controller="Category" asp-action="Index">Back to List</a></div>
                @if (this.User.IsInRole("Administrator"))
                {
                    <div class="red_button shop_now_button mr-3"><a asp-area="" asp-controller="Category" asp-action="Edit" asp-route-id="@Model.Id">Edit</a></div>
                    <div class="red_button shop_now_button mr-3"><a asp-area="" asp-controller="Category" asp-action="Delete" asp-route-id="@Model.Id">Delete</a></div>
                }
            </section>
        </div>
    </div>
</div>
