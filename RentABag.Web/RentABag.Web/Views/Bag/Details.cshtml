@model BagViewModel

@{
    ViewData["Title"] = "Bag Details";
}

<div class="container contact_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li>Administrator</li>
                    <li class="active"><a asp-area="" asp-controller="Bag" asp-action="Index"><i class="fa fa-angle-right" aria-hidden="true"></i>Bags</a></li>
                    <li class="active"><a asp-area="" asp-controller="Bag" asp-action="Details" asp-route-id="@Model.Id"><i class="fa fa-angle-right" aria-hidden="true"></i>Bag Details</a></li>
                </ul>
            </div>

        </div>
    </div>
    <section>
        <h4>Bag Details</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" disabled />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" disabled />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" disabled />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" class="form-control" disabled />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category"></label>
                    <input asp-for="Category" class="form-control" disabled />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Designer"></label>
                    <input asp-for="Designer" class="form-control" disabled />
                    <span asp-validation-for="Designer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-area="" asp-controller="Bag" asp-action="Index"><button type="button" class="btn btn-default">Back to List</button></a>
                    @if (this.User.IsInRole("Administrator"))
                    {
                        <a asp-area="" asp-controller="Bag" asp-action="Edit" asp-route-id="@Model.Id"><button class="btn btn-default">Edit</button></a>
                        <a asp-area="" asp-controller="Bag" asp-action="Delete" asp-route-id="@Model.Id"><button class="btn btn-default">Delete</button></a>
                    }
                </div>
            </div>
        </div>
    </section>
</div>
